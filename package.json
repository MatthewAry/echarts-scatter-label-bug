{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vite-vue2-vuetify-ts-starter",
  "description": "ue2 Vuetify TypeScript Startar project for Vite.",
  "version": "0.7.0",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vite-vue2-vuetify-ts-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vite-vue2-vuetify-ts-starter.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vite-vue2-vuetify-ts-starter/issues"
  },
  "engines": {
    "node": ">=16.16.0",
    "yarn": ">=1.22.4"
  },
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./node_modules/.vite",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:markup": "vue-tsc --noEmit",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint  && prettier  \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "vue-tsc --noEmit && vite build",
    "build:analyze": "vue-tsc --noEmit && vite build --mode analyze",
    "build:deploy": "vite build",
    "build:clean": "rimraf dist",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@logue/vue2-helpers": "^1.2.4",
    "@mdi/font": "^6.9.96",
    "vue": "^2.7.6",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.4",
    "vue2-teleport": "^1.0.1",
    "vuetify": "^2.6.7",
    "vuex": "^3.6.2",
    "vuex-persist": "^3.1.3",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@types/node": "^18.0.5",
    "@types/webfontloader": "^1.6.34",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-vue2": "^1.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/test-utils": "^1.3.0",
    "c8": "^7.11.3",
    "eslint": "^8.19.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.2.6",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-json-schema-validator": "^3.2.5",
    "eslint-plugin-jsonc": "^2.3.1",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^9.2.0",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "eslint-plugin-vuetify": "^1.1.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.7.1",
    "sass": "1.32.12",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.7.4",
    "unplugin-vue-components": "^0.21.1",
    "vite": "^3.0.0",
    "vite-plugin-checker": "^0.4.9",
    "vitest": "^0.18.0",
    "vue-eslint-parser": "^9.0.3",
    "vue-template-compiler": "^2.7.6",
    "vue-tsc": "^0.38.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": "vue-tsc --noEmit",
    "*.{js,ts,json,jsonc,json5,yaml,yml,toml,yml,yaml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "prettier": "^2.7.1"
  },
  "stackblitz": {
    "startCommand": "yarn run test"
  }
}
